<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewKegiatan"
        android:layout_width="100dp"
        android:layout_height="147dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvnamakeg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Nama kegiatan"

            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/tvtanggalkeg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:paddingTop="10dp"
            android:text="Tanggal kegiatan"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/tvjeniskeg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Jenis kegiatan"

            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/tvkelurahan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Kelurahan"

            android:textColor="@color/colorAccent" />


    </LinearLayout>

</LinearLayout>